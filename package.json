  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "types": "index.d.ts",
  "main": "ui.umd.js",
  "module": "ui.es.js",
  "scripts": {
    "compile": "vue-tsc --noEmit",
    "start": "vite",
    "build": "yarn compile && ./scripts/build.sh",
    "lint": "yarn lint:no-fix --fix",
    "lint:no-fix": "eslint src --ext .ts,.vue --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pack:local": "yarn -s build && cd lib && yarn pack && cd .."
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@seregpie/vue-resize-sensor": "^1.1.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vitejs/plugin-vue-jsx": "^1.1.0",
    "@vue/compiler-sfc": "^3.0.5",
    "autoprefixer": "^10.2.4",
    "eslint": "^7.27.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-vue": "^7.10.0",
    "husky": "^4.3.6",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.32.8",
    "tailwindcss": "^2.0.3",
    "tailwindcss-export-config": "^2.3.0",
    "typescript": "^4.3.5",
    "vite": "^2.3.4",
    "vue": "^3.0.5",
    "vue-router": "^4.0.10",
    "vue-tsc": "^0.2.2"
  },
  "peerDependencies": {
    "@tailwindcss/line-clamp": "^0.2.1",
    "autoprefixer": "^10.2.4",
    "postcss": "^8.2.6",
    "vue": ">=3.0.5",
    "vue-router": ">=4.0.10"
  }
}
